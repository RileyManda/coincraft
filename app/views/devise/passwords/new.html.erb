<div class="container-fluid p-0" style="max-width: 100%;">
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #3778c2;">
    <h2 class="navbar-heading text-white mx-auto">Forgot your password?</h2>
  </nav>

  <div class="container text-center mt-3" style="max-width: 400px; margin: 0 auto;">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group mb-3">
        <%= f.email_field :email,placeholder: "Email", autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="text-center">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary", style: "background-color: #3778c2;" %>
      </div>
    <% end %>
  </div>

  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
