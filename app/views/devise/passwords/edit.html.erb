<div class="container-fluid p-0" style="max-width: 100%;">
<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #3778c2;">
    <h2 class="navbar-heading">Change your password</h2>
  </nav>

  <div class="container" style="max-width: 400px; margin: 0 auto;">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password" %>
  </div>
<% end %>
<div class="text-center">
<%= render "devise/shared/links" %>
</div>
</div>