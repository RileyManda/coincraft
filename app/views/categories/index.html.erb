<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #3778c2;">
  <a class="navbar-brand text-white" href="#">
    <img src="<%= asset_path('nav-icon.png') %>" alt="" class="logo" style="margin-left: 10px;">
  </a>
  <h1 class="text-center text-white w-100 d-none d-lg-block">Categories</h1>
  <a class="navbar-brand text-right" href="#">
    <img src="<%= asset_path('search-icon.png') %>" alt="" class="logo" style="margin-right: 10px;">
  </a>
</nav>

<div class="notifications">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</div>

<p style="color: green"><%= notice %></p>

<div id="categories" class="list-group" style="margin-left: 10px; margin-right: 10px;">
  <% @categories.each do |category| %>
    <a href="<%= category_path(category) %>" class="list-group-item list-group-item-action mb-3" style="margin: 0 auto;">
      <div class="d-flex justify-content-between align-items-center">
        <div class="d-inline mb-4">
          <%= category.icon.html_safe %>
        </div>
        <div class="d-inline text-center">
          <h5 class="card-title"><%= category.name %></h5>
        </div>
        <div class="text-lg font-weight-bold">
          <p>Total Transactions: <%= category.transactions.sum(:amount) %></p>
        </div>
      </div>
    </a>
  <% end %>
</div>


<footer class="navbar navbar-expand-lg navbar-light fixed-bottom" style="background-color: #5fb523;">
  <div class="container">
    <%= link_to "Create new category", new_category_path, class: "btn btn-success btn-block", style: "background-color: #5fb523; width: 100%;" %>
  </div>
</footer>
