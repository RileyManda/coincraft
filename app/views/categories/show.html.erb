

<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #3778c2;">
  <%= link_to categories_path do %>
  <a class="navbar-brand text-white" href="<%= categories_path %>">
    <img src="<%= asset_path('arrow-left.png') %>" alt="" class="logo" style="margin-left: 10px;">
  </a>
    <% end %>
    <p class="text-center text-white"> <%= @category.name %></p>
  <a class="navbar-brand text-right" href="#">
    <img src="<%= asset_path('search-icon.png') %>" alt="" class="logo" style="margin-right: 10px;">
  </a>
</nav>

<br>
<p style="color: green"><%= notice %></p>
<div class="card mb-3 mt-5">
  <div class="card-body text-center">
    <div class="mb-6">
      <%= @category.icon.html_safe %>
    </div>
    <h5 class="card-title text-center"><%= @category.name %></h5> <!-- Center-align category name -->
    <hr>
    <h5 class="card-title">Total Transactions Amount:</h5>
    <% total_amount = @category.transactions.sum(:amount) %>
    <p class="card-text">Amount: $<%= total_amount %></p>
  </div>
</div>

<div class="list-group" style="margin-left: 10px; margin-right: 10px;">
  <% @category.transactions.each do |transaction| %>
    <%= link_to transaction, class: "text-decoration-none" do %>
      <div class="card mb-2">
        <div class="card-body">
          <h5 class="card-title"><%= transaction.name %></h5>
          <p class="card-text">$<%= transaction.amount %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<footer class="navbar navbar-expand-lg navbar-light fixed-bottom" style="background-color: #5fb523;">
  <div class="container">
    <%= link_to "Add a new transaction", new_transaction_path(category_id: @category.id), class: "btn btn-success btn-block", style: "background-color: #5fb523; width: 100%; border: 1px solid white;" %>
  </div>
</footer>
