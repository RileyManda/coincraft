<p style="color: green"><%= notice %></p>

<%= render @category %>

<div>
  <%= link_to "Edit this category", edit_category_path(@category) %> |
  <%= link_to "Back to all other categories", categories_path %>
  <%= link_to "Create Transaction", new_transaction_path(category_id: @category.id) %>
  <%= button_to "Destroy this category", @category, method: :delete %>
</div>

<h2>Transactions in this Category:</h2>
<ul>
  <% @category.transactions.each do |transaction| %>
    <li>
      Name: <%= transaction.name %>
      Amount: <%= transaction.amount %>
      <%= link_to "Show this transaction", transaction %>
    </li>
  <% end %>
</ul>

<h2>All Transactions in the System:</h2>
<div id="transactions">
  <% @transactions.each do |transaction| %>
    <%= render transaction %>
    <p>
      <%= link_to "Show this transaction", transaction %>
    </p>
  <% end %>
</div>
