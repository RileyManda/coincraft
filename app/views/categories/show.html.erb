<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #3778c2;">
  <div class="d-flex justify-content-between align-items-center w-100">
    <%= link_to categories_path, class: "navbar-brand text-white", style: "padding: 0;" do %>
      <img src="<%= asset_path('arrow-left.png') %>" alt="" class="logo" style="margin-left: 10px; width: 30px;">
    <% end %>
    <p class="text-center text-white mb-0"><%= @category.name %></p>
    <a class="navbar-brand text-right" href="#">
      <img src="<%= asset_path('search-icon.png') %>" alt="" class="logo" style="margin-right: 10px; width: 30px;">
    </a>
  </div>
</nav>


<div class="list-group" style="margin-left: 0; margin-right: 0;">
  <div class="card mb-2">
    <div class="card-body d-flex justify-content-between">
      <div>
        <h5 class="card-title">Total Transactions Amount:</h5>
      </div>
      <div>
        <% total_amount = @category.transactions.sum(:amount) %>
        <p class="card-text">$<%= total_amount %></p>
      </div>
    </div>
  </div>
</div>


<div class="list-group" style="margin-left: 20px; margin-right: 20px;">
  <% @category.transactions.each do |transaction| %>
    <%= link_to transaction, class: "text-decoration-none" do %>
  <div class="card mb-2">
    <div class="card-body d-flex justify-content-between">
      <div>
        <h5 class="card-title"><%= transaction.name %></h5>
      </div>
      <div>
        <% total_amount = @category.transactions.sum(:amount) %>
        <p class="card-text">$<%= transaction.amount %></p>
      </div>
    </div>
  </div>
     <% end %>
  <% end %>
</div>


<footer class="navbar navbar-expand-lg navbar-light fixed-bottom" style="background-color: #5fb523;">
  <div class="container">
    <%= link_to "Add a new transaction", new_transaction_path(category_id: @category.id), class: "btn btn-success btn-block", style: "background-color: #5fb523; width: 100%; border: 1px solid white;" %>
  </div>
</footer>
